	<Style TargetType="{x:Type DataGrid}">
		<Setter Property="HeadersVisibility" Value="Column"/>
		<Setter Property="ColumnHeaderHeight" Value="32"/>
		<Setter Property="RowHeight" Value="32"/>
		<Setter Property="BorderBrush" Value="{StaticResource BorderGray1}"/>
		<Setter Property="Background" Value="Transparent"/>
		<Setter Property="Foreground" Value="{StaticResource ForegroundColor}"/>
		<Setter Property="AlternatingRowBackground" Value="{StaticResource BorderGray1}"/>
		<Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderGray1}"/>
		<Setter Property="VerticalGridLinesBrush" Value="{StaticResource BorderGray1}"/>
		<Setter Property="GridLinesVisibility" Value="All"/>
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Stretch"/>
	</Style>
	

