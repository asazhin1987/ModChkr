										<DoubleAnimation Duration="0:0:0.3" Storyboard.TargetName="PART_Fill"
                                                 Storyboard.TargetProperty="(Background).(SolidColorBrush.Opacity)"
                                                 To="1">
										</DoubleAnimation>
										<ColorAnimation Duration="0:0:0.3" Storyboard.TargetName="PART_Content" 
